doctype html
html
  head
    meta(charset="utf-8")
    title Video Controller
    include includes/head
  body
    h1 Video Controller
    ul
      li
        a.load(href="#") Load
      li
        a.play(href="#") Play
      li
        a.pause(href="#") Pause
      li.timeupdate
        span.elapsed 0:00
        | /
        span.duration 0:00
      li
        label(for="scrubber") Scrubber
        input.seek(id="scrubber", type="range", min="0", max="1", step="0.05", value="0")
      li
        label(for="volume") Volume
        input.volume(id="volume", type="range", min="0.0", max="1.0", step="0.05")
        span.volume-label 0
      li
        a.fadeIn(href="#") Fade In
      li
        a.fadeOut(href="#") Fade Out
      li
        a.mute(href="#") Mute

    // build:js /js/bundle-video.min.js
    script(src="/js/bundle-video.js")
    // /build
